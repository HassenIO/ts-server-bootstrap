{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "outDir": "build",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
